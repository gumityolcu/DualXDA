Bootstrap: docker
From: pytorch/pytorch:2.3.0-cuda11.8-cudnn8-devel

%files

  ../src /opt

%post
  pip install --upgrade pip
  pip install
    numpy \
    matplotlib \
    xmltodict \
    pyyaml \
    tqdm \
    scikit-learn \
    scikit-image \
    scipy \
    seaborn \
    termcolor
  pip install zennit
  pip install tensorboard
%runscript

  cd /opt/src
  pip install traker[fast]
  python train.py "$@"
