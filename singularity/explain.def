Bootstrap: docker
From: pytorch/pytorch:2.3.0-cuda11.8-cudnn8-devel

%files

  ../src /opt
  ../scikit-learn-dual /sklearn

%post

  export "PATH=/opt/conda/bin:$PATH"
  conda install --yes \
    python==3.10 \
    numpy \
    matplotlib \
    xmltodict \
    pyyaml \
    tqdm \
    scikit-image \
    scipy \
    seaborn \
    termcolor
  pip install zennit
  pip install tensorboard
  pip install /sklearn

%runscript

  cd /opt/src
  pwd
  ls
  pip install traker[fast] --user
  python explain.py "$@"
