Bootstrap: docker
From: pytorch/pytorch:2.3.0-cuda11.8-cudnn8-devel

%files

  ../scikit-learn-dual /sklearn
  ../captum /captum

%post
  export "PATH=/opt/conda/bin:$PATH"
  pip install numpy \
    lightning \
    tqdm \
    annoy \
    datasets \
    transformers==4.49.0\
    matplotlib \
    xmltodict \
    pyyaml \
    tqdm \
    scikit-image \
    scipy \
    seaborn \
    termcolor \
    torcheval \
    zennit \
    tensorboard \
    torchmetrics \
    kronfluence  \
  pip install /sklearn
  pip install /captum

%runscript

  cd /mnt/src
  pwd
  ls
  if [ "$1" = "--trak" ]; then
    pip install traker[fast] --user
    shift
  fi
  python evaluate.py "$@"
